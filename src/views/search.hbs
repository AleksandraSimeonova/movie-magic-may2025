<section id="search">
    <h1>Search</h1>
    <form action="/movies/search" method="GET" class="form">
        <input type="text" class="search" name="search" placeholder="Title..." value ="{{filter.search}}">
        <input type="text" name="genre" class="genre" placeholder="Genre..." "{{filter.genre}}"> 
        <input type="number" name="year" class="year" placeholder="Year..." "{{filter.year}}">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
    <div class="band">

        <!-- If there are posts for movie in the database display each of them -->
        {{#each movies }}
        {{>movie}}
        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no movies matched...</p>
        </div>

        {{/each}}

    </div>
</section>